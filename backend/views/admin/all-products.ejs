  <main>
    <div class="container" >
   
    </div>
    <div class="container mt-3"  style="text-align: center ">
      <h4>CATEGORIES</h4>
      <form class=" mt-2" style=" text-align: center;" role="search">
        <button class="btn btn-outline-success" name="category" value="Electronics" href="/category"
          type="submit">Electronics</button>
        <button class="btn btn-outline-success" name="category" value="Clothes" href="/category" type="submit">Clothes</button>
        <button class="btn btn-outline-success" name="category" value="Shoes" href="/category" type="submit">Shoes</button>

        <button class="btn btn-outline-success" name="category" value="Other" href="/category" type="submit">Other</button>
      </form>
            
      <form class="d-flex mt-2" style="display:block" role="search">
        <input class="form-control me-2" type="search" name="name" placeholder="Search Product" aria-label="Search">
        <button class="btn btn-outline-success" href="/name" type="submit">Search</button>
      </form>
    </div>
    <% if (prods.length > 0) { %>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ID#</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>

          </tr>
        </thead>
        <tbody>
          <% for (let product of prods) { %>

          <tr>
            <th scope="row"><%= product.id %></th>
            <td><%= product.name %></td>
            <td><%= product.category %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td> 
              <button class="btn btn-outline-success" href="/editProduct" type="submit">Edit</button>
              <a href="/admin/deleteProduct/<%= product.id %>" class="btn btn-outline-success">Delete</a>

            </td>
          </tr>
          <% } %>

          
        </tbody>
      </table>
      
      
    <% } else { %>
      <h1>No Products Found!</h1>
  <% } %>
  <div class="pages mt-5" style=" justify-content: center; display: flex;"  >
    <nav aria-label="...">
